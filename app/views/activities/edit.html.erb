<div class="app-container-form">
  <div class="stack-lg">
    <header class="text-center stack-sm">
      <div class="flex items-center justify-between mb-4">
        <% if @plan %>
          <%= link_to "← Back", plan_path(@plan, week: @week), class: "btn-ghost text-sm" %>
        <% else %>
          <%= link_to "← Back", plans_path, class: "btn-ghost text-sm" %>
        <% end %>
        <div></div>
      </div>
      <h1 class="heading-page">Edit Workout</h1>
      <p class="text-sm font-medium text-slate-500">Update your training activity</p>
    </header>

    <section class="card">
      <div class="card-section">
        <%= render "form", activity: @activity %>
      </div>
    </section>
  </div>
</div>
