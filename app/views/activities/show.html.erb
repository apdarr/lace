<div class="max-w-4xl mx-auto px-4">
  <div class="space-y-8">
    <% if notice.present? %>
      <p class="mb-4 inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200" id="notice"><%= notice %></p>
    <% end %>

    <header class="text-center">
      <h1 class="heading-page">Activity Details</h1>
    </header>

    <section class="card">
      <div class="card-section stack-md">
        <%= link_to "Back to activities", activities_path, class: "text-blue-600 transition-colors font-bold underline text-lg" %>

        <!-- Main Activity Card -->
        <div>
          <%= render @activity %>
        </div>

        <% strava_activity = @activity.matched_strava_activity %>
        <% if strava_activity %>
          <div class="divider"></div>

          <!-- Linked Strava Activity Section -->
          <div>
            <h2 class="heading-section mb-4">Linked Strava Activity</h2>
            
            <div class="flex flex-col md:flex-row md:justify-between gap-6 mb-4">
              <div class="metric flex-1 md:text-left">
                <span class="metric-label">Match Status</span>
                <span class="metric-value">
                  <% if strava_activity.matched? %>
                    <span class="badge bg-green-100 text-green-700">Matched</span>
                  <% elsif strava_activity.linked? %>
                    <span class="badge bg-blue-100 text-blue-700">Linked</span>
                  <% end %>
                </span>
              </div>
              <div class="metric flex-1 md:text-center">
                <span class="metric-label">Strava Distance</span>
                <span class="metric-value"><%= meters_to_miles(strava_activity.distance) %> mi</span>
              </div>
              <div class="metric flex-1 md:text-right">
                <span class="metric-label">Activity Type</span>
                <span class="metric-value capitalize"><%= strava_activity.activity_type %></span>
              </div>
            </div>

            <div class="flex flex-wrap gap-2">
              <%= link_to "https://strava.com/activities/#{strava_activity.strava_id}", 
                  class: "btn-primary",
                  target: "_blank", rel: "noopener" do %>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.598h4.172L10.463 0l-7 13.828h4.169"/>
                </svg>
                <span>View on Strava</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Similar Activities Section -->
    <section class="card">
      <div class="card-section stack-md">
        <h2 class="heading-section">Similar Activities</h2>
        <div id="activities" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @nearest_activities.each do |activity| %>
            <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4 hover:shadow-md transition-all duration-200 hover:scale-105">
              <div class="mb-4">
                <h3 class="font-semibold text-lg text-slate-800 capitalize mb-2"><%= activity.activity_type %></h3>
                
                <!-- Quick Stats Grid -->
                <div class="grid grid-cols-2 gap-3 text-sm">
                  <div class="bg-slate-50 rounded-lg p-3 text-center">
                    <div class="font-bold text-indigo-700"><%= meters_to_miles(activity.distance) %></div>
                    <div class="text-xs text-slate-600">miles</div>
                  </div>
                  
                  <div class="bg-slate-50 rounded-lg p-3 text-center">
                    <div class="font-bold text-slate-700"><%= activity.strava_id %></div>
                    <div class="text-xs text-slate-600">Strava ID</div>
                  </div>
                </div>
                
                <% if activity.description.present? %>
                  <div class="mt-3 p-3 bg-slate-50 rounded-lg">
                    <div class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">Description</div>
                    <div class="text-sm text-slate-700 line-clamp-3"><%= simple_format(activity.description) %></div>
                  </div>
                <% end %>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex flex-col space-y-2">
                <%= link_to "View Details", activity, class: "text-center py-2 px-4 bg-indigo-100 text-indigo-700 rounded-lg hover:bg-indigo-200 transition-colors font-medium text-sm" %>
                <%= link_to "View on Strava", "https://strava.com/activities/#{activity.strava_id}", 
                    class: "text-center py-2 px-4 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 transition-colors font-medium text-sm",
                    target: "_blank", rel: "noopener" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>