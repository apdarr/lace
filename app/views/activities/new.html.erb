<div class="max-w-4xl mx-auto px-4">
  <div class="space-y-6">

    <header class="text-center">
      <h1 class="heading-page">Add Workout</h1>
      <% if params[:date].present? %>
        <p class="text-sm font-medium text-slate-500 mt-1">
          Scheduled for <%= Date.parse(params[:date]).strftime('%A, %B %-d') %>
        </p>
      <% else %>
        <p class="text-sm font-medium text-slate-500 mt-1">Create a new training activity</p>
      <% end %>
    </header>

    <section class="card">
      <div class="card-section stack-md">
        <%= link_to "Back to this plan", plan_path(@plan, week: @week), class: "text-blue-600 transition-colors font-bold underline text-lg" %>
        <div class="divider"></div>
        <%= render "form", activity: @activity %>
      </div>
    </section>
  </div>
</div>
