<% content_for :title, "Activities" %>

<div class="app-container-wide stack-lg">
  <% if notice.present? %>
    <p class="mb-4 inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200" id="notice"><%= notice %></p>
  <% end %>

  <header class="text-center stack-sm">
    <h1 class="heading-page">Your Activities</h1>
    <p class="text-sm font-medium text-slate-500">Track, review, and refine performance</p>
  </header>

  <section class="card">
    <div class="card-section stack-md">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <h2 class="heading-section text-base">Activities</h2>
        <div class="w-full max-w-md">
          <%= form_with(url: activities_path, method: :get, class: "flex flex-col gap-2") do |f| %>
            <div class="flex gap-2">
              <%= f.search_field :query, value: params[:query], class: "form-input flex-1", placeholder: "Search activities..." %>
              <%= f.submit "Search", class: "btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <% if params[:query].present? %>
        <div class="text-center">
          <p class="text-sm text-slate-600">Showing results for: <span class="font-semibold text-slate-800"><%= params[:query] %></span>
            <%= link_to "Clear", activities_path, class: "ml-2 text-xs text-red-600 hover:text-red-700" %></p>
        </div>
      <% end %>

      <div id="activities" class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% if @activities.any? %>
          <% @activities.each do |activity| %>
            <div class="card hover:shadow-md transition">
              <div class="card-section space-y-4">
                <%= render activity %>
                <div class="flex justify-end">
                  <%= link_to "Details", activity, class: "btn-outline" %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-full text-center card">
            <div class="card-section space-y-3">
              <% if params[:query].present? %>
                <p class="text-sm text-slate-600">No activities found matching "<%= params[:query] %>".</p>
              <% else %>
                <p class="text-sm text-slate-600">No activities found.</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="pt-4">
        <%= paginate @activities %>
      </div>
    </div>
  </section>
</div>