<%= form_with(model: plan, class: "contents", data: { controller: "plan-form" }) do |form| %>
  <% if plan.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg mb-6">
      <h2 class="text-lg font-medium text-red-600 mb-2">
        <%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:
      </h2>

      <ul class="list-disc pl-5 text-red-500">
        <% plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :plan_type, class: "block text-sm font-bold text-slate-700 mb-2" %>
      <%= form.select :plan_type, 
                     [['Use Template Plan', 'template'], ['Create Custom Plan', 'custom']], 
                     { selected: plan.plan_type || 'template' }, 
                     { class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base py-3 px-4",
                       data: { action: "change->plan-form#togglePlanType" } } %>
    </div>

    <div>
      <%= form.label :length, class: "block text-sm font-bold text-slate-700 mb-2" %>
      <%= form.number_field :length, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base py-3 px-4" %>
    </div>

    <div>
      <%= form.label :race_date, class: "block text-sm font-bold text-slate-700 mb-2" %>
      <%= form.date_field :race_date, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base py-3 px-4" %>
    </div>

    <div data-plan-form-target="photosSection" style="display: none;">
      <%= form.label :photos, "Upload Training Plan Photos", class: "block text-sm font-bold text-slate-700 mb-2" %>
      <%= form.file_field :photos, multiple: true, accept: "image/*", 
                         class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base py-3 px-4" %>
      <p class="text-sm text-slate-500 mt-1">Upload photos of your training plan from a book or document. We'll use AI to parse the workout details.</p>
    </div>

    <div class="mt-8">
      <%= form.submit class: "w-full rounded-md bg-indigo-600 py-3 px-4 font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-300" %>
    </div>
  </div>
<% end %>
