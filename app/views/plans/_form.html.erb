<%= form_with(model: plan, class: "contents") do |form| %>
  <% if plan.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg mb-6">
      <h2 class="text-lg font-medium text-red-600 mb-2">
        <%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:
      </h2>

      <ul class="list-disc pl-5 text-red-500">
        <% plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :length, class: "block text-sm font-bold text-slate-700 mb-2" %>
      <%= form.number_field :length, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base py-3 px-4" %>
    </div>

    <div>
      <%= form.label :race_date, class: "block text-sm font-bold text-slate-700 mb-2" %>
      <%= form.date_field :race_date, class: "block w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base py-3 px-4" %>
    </div>

    <div class="border-t pt-6">
      <div class="flex items-center mb-4">
        <%= form.check_box :custom_creation, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
        <%= form.label :custom_creation, "Create custom training plan", class: "ml-2 block text-sm font-bold text-slate-700" %>
      </div>
      <p class="text-sm text-slate-600 mb-4">Check this box to create your own training plan instead of using the pre-built template.</p>
    </div>

    <div id="photo-upload-section" class="border-t pt-6">
      <div>
        <%= form.label :photos, "Upload training plan photos (optional)", class: "block text-sm font-bold text-slate-700 mb-2" %>
        <p class="text-sm text-slate-600 mb-4">Upload photos of training plans from books or other sources. We'll help parse the workout details.</p>
        <%= form.file_field :photos, multiple: true, accept: "image/*", class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      </div>
    </div>

    <div class="mt-8">
      <%= form.submit class: "w-full rounded-md bg-indigo-600 py-3 px-4 font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-300" %>
    </div>
  </div>
<% end %>
