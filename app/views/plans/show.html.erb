<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @plan %>

    <div class="mt-8">
      <div class="grid grid-cols-8 gap-2">
        <div class="col-span-1"></div>
        <div class="font-semibold text-center">Monday</div>
        <div class="font-semibold text-center">Tuesday</div>
        <div class="font-semibold text-center">Wednesday</div>
        <div class="font-semibold text-center">Thursday</div>
        <div class="font-semibold text-center">Friday</div>
        <div class="font-semibold text-center">Saturday</div>
        <div class="font-semibold text-center">Sunday</div>

        <% training_start_date = @plan.race_date - 17.weeks %>
        <% training_start_date = training_start_date.beginning_of_week %>
        
        <% 18.times do |week| %>
          <% week_start = training_start_date + (week * 7) %>
          <div class="font-medium text-sm py-2"><%= week_start.strftime("%m/%d") %></div>
          
          <% 7.times do |day| %>
            <div class="h-24 bg-gray-100 rounded-lg"></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <%= link_to "Edit this plan", edit_plan_path(@plan), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to plans", plans_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this plan", @plan, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
