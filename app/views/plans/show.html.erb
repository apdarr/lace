<div data-controller="activity-modal plan-processor" 
     data-plan-processor-plan-id-value="<%= @plan.id %>" 
     data-plan-processor-status-value="<%= @plan.processing_status %>"
     class="app-container-wide">
  <div class="stack-lg">
    <% if notice.present? %>
      <p class="mb-4 inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200" id="notice"><%= notice %></p>
    <% end %>

    <header class="text-center stack-sm">
      <div class="flex items-center justify-between mb-4">
        <%= link_to "← Back to plans", plans_path, class: "btn-ghost text-sm" %>
        <div></div> <!-- spacer for center alignment -->
      </div>
      <h1 class="heading-page">Training Plan</h1>
      <p class="text-sm font-medium text-slate-500">Structured schedule toward race day</p>
    </header>

    <section class="card">
      <div class="card-section stack-md">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="metric">
            <span class="metric-label">Plan Length</span>
            <span class="metric-value"><%= @plan.length %> Weeks</span>
          </div>
          <div class="metric">
            <span class="metric-label">Race Date</span>
            <span class="metric-value"><%= @plan.race_date.strftime("%B %d, %Y") %></span>
          </div>
          <div class="metric">
            <span class="metric-label">Plan Type</span>
            <span class="metric-value flex items-center gap-2">
              <%= @plan.plan_type %>
              <% if @plan.custom? %>
                <span class="badge-neutral">Custom</span>
              <% else %>
                <span class="badge-neutral">Template</span>
              <% end %>
            </span>
          </div>
        </div>

        <div class="actions-row" data-plan-processor-target="actions">
          <%= link_to "Edit plan", edit_plan_path(@plan), class: "btn-soft" %>
          <% if @plan.custom? %>
            <%= link_to "Edit workouts", edit_workouts_plan_path(@plan), class: "btn-outline" %>
          <% end %>
          <%= button_to "Delete plan", @plan, method: :delete,
              class: "btn-danger",
              form: { data: { turbo_confirm: "Are you sure you want to delete this plan?" } } %>
        </div>

        <div class="divider"></div>

        <!-- Processing Spinner -->
        <div data-plan-processor-target="processing_indicator" class="<%= @plan.processing_status.in?(%w[queued processing]) ? '' : 'hidden' %>">
          <div class="text-center py-12">
            <div class="inline-flex items-center space-x-3">
              <svg class="animate-spin -ml-1 mr-3 h-6 w-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <div class="text-gray-700">
                <div class="font-medium" data-plan-processor-target="status_text">Processing your training plan photos...</div>
                <div class="text-sm text-gray-500 mt-1">This may take a few minutes. Your workouts will appear automatically when ready.</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Training Calendar -->
        <div data-plan-processor-target="calendar" class="<%= @plan.processing_status.in?(%w[queued processing]) ? 'hidden' : '' %>">
          <h2 class="heading-section mb-6">Training Calendar</h2>
          
          <% training_start_date = (@plan.race_date - @plan.length.weeks).beginning_of_week %>
          <% activities = Activity.where(plan_id: @plan.id).index_by { |a| a.start_date_local.to_date } %>
          
          <!-- Week Selector -->
          <div class="mb-6">
            <select class="form-input w-full sm:w-auto" id="week-selector">
              <% @plan.length.times do |week| %>
                <% week_start = training_start_date + (week * 7) %>
                <% week_total = calculate_week_total_miles(activities, week_start) %>
                <option value="<%= week %>" <%= 'selected' if week == 0 %>>
                  Week <%= week + 1 %> • <%= week_start.strftime("%b %d") %> - <%= (week_start + 6.days).strftime("%b %d") %> • <%= sprintf("%.1f", week_total) %> mi
                </option>
              <% end %>
            </select>
          </div>

          <!-- Training Days -->
          <% @plan.length.times do |week| %>
            <% week_start = training_start_date + (week * 7) %>
            <% week_total = calculate_week_total_miles(activities, week_start) %>
            <div class="week-view space-y-4 <%= 'hidden' unless week == 0 %>" data-week="<%= week %>">
              
              <!-- Week Header -->
              <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg">
                <h3 class="text-sm font-semibold text-slate-700">Week <%= week + 1 %></h3>
                <div class="text-sm font-medium text-slate-600">
                  <span class="text-xs text-slate-500">Total:</span> 
                  <%= sprintf("%.1f", week_total) %> mi
                </div>
              </div>
              
              <!-- Draggable Day List -->
              <div class="space-y-3" data-controller="drag" data-drag-target="container">
                <% 7.times do |day| %>
                  <% current_date = week_start + day.days %>
                  <% activity = activities[current_date] %>
                  <div class="relative pl-8 pr-4 py-4 rounded-lg border border-slate-200 bg-white shadow-sm hover:shadow transition group <%= 'bg-slate-50 border-slate-300' if activity %>" 
                       data-drag-target="item" 
                       data-activity-cell 
                       data-date="<%= current_date.to_s %>">
                    
                    <!-- Drag Handle -->
                    <div class="absolute left-2 top-1/2 transform -translate-y-1/2 flex flex-col gap-1 p-1 text-slate-400 hover:text-slate-600 cursor-grab active:cursor-grabbing select-none opacity-70 group-hover:opacity-100 transition">
                      <div class="w-1 h-1 rounded-full bg-current"></div>
                      <div class="w-1 h-1 rounded-full bg-current"></div>
                      <div class="w-1 h-1 rounded-full bg-current"></div>
                      <div class="w-1 h-1 rounded-full bg-current"></div>
                      <div class="w-1 h-1 rounded-full bg-current"></div>
                    </div>
                    
                    <!-- Day Content -->
                    <div class="flex items-start justify-between mb-3">
                      <div>
                        <div class="text-base font-semibold text-slate-900 leading-tight"><%= current_date.strftime('%A') %></div>
                        <div class="text-xs text-slate-500"><%= current_date.strftime('%b %-d') %></div>
                      </div>
                      <button type="button"
                              class="calendar-edit-btn"
                              data-activity-modal-date-value="<%= current_date.to_s %>"
                              data-activity-modal-activity-value="<%= activity.to_json if activity %>"
                              data-activity-modal-activity-id-value="<%= activity&.id %>"
                              data-action="activity-modal#showModal">
                        <%= activity ? 'Edit' : 'Add' %>
                      </button>
                    </div>
                    
                    <% if activity %>
                      <div class="space-y-2">
                        <div class="flex items-center gap-2">
                          <span class="badge-accent"><%= activity.distance %> mi</span>
                        </div>
                        <p class="text-xs text-slate-700 leading-snug"><%= activity.description %></p>
                      </div>
                    <% else %>
                      <div class="text-center py-4 text-slate-400">
                        <div class="text-xs">Rest day</div>
                        <div class="text-[10px] mt-1">Tap Add to schedule</div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const weekSelector = document.getElementById('week-selector')
      if (weekSelector) {
        weekSelector.addEventListener('change', function(e) {
          // Hide all week views
          document.querySelectorAll('.week-view').forEach(view => {
            view.classList.add('hidden')
          })
          
          // Show selected week
          const selectedWeek = e.target.value
          document.querySelectorAll(`[data-week="${selectedWeek}"]`).forEach(view => {
            view.classList.remove('hidden')
          })
        })
      }
    })
  </script>

  <div id="activity-modal" data-activity-modal-target="modal" data-activity-modal-update-url="<%= activities_path %>" data-plan-id="<%= @plan.id %>" class="hidden fixed inset-0 z-50">
    <div class="fixed inset-0 bg-slate-600/60"></div>
    <div class="relative z-50">
      <div class="fixed top-20 left-1/2 -translate-x-1/2 w-full max-w-md p-5 card">
        <div class="space-y-4">
          <h3 class="heading-section text-base">Edit Activity</h3>
          <form data-action="submit->activity-modal#save" class="space-y-4">
            <input type="hidden" data-activity-modal-target="dateInput" name="date">
            <div class="form-field">
              <label class="form-label">Distance (miles)</label>
              <input type="number" step="0.1" class="form-input" data-activity-modal-target="distanceInput">
            </div>
            <div class="form-field">
              <label class="form-label">Description</label>
              <textarea rows="4" class="form-textarea" placeholder="Enter activity details..." data-activity-modal-target="descriptionInput"></textarea>
            </div>
            <div class="flex justify-end gap-2 pt-2">
              <button type="button" class="btn-soft" data-action="click->activity-modal#closeModal">Cancel</button>
              <button type="submit" class="btn-primary">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>