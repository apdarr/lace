<div class="app-container-wide">
  <% if notice.present? %>
    <p class="mb-6 inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200" id="notice"><%= notice %></p>
  <% end %>

  <div class="stack-lg">
    <header class="text-center stack-sm">
      <h1 class="heading-page">Edit Your Plan</h1>
      <p class="text-sm font-medium text-slate-500">Update your training schedule</p>
    </header>

    <section class="card">
      <div class="card-header">
        <h2 class="card-title">Modify Plan Details</h2>
      </div>
      <div class="card-section">
        <%= render "form", plan: @plan %>
      </div>
      <div class="card-section border-t border-slate-200 flex justify-between items-center">
        <%= link_to "Back to plans", plans_path, class: "text-blue-600 transition-colors font-bold underline text-lg" %>
        <%= link_to "View this plan", @plan, class: "text-blue-600 transition-colors font-bold underline text-lg" %>
      </div>
    </section>
  </div>
</div>
