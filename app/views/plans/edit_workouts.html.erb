<div class="mx-auto md:w-4/5 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="text-center mb-8">
    <h1 class="font-bold text-5xl text-slate-800 mb-4">Edit Workouts</h1>
    <p class="text-sm text-slate-600 mb-6 font-semibold">Customize your training schedule</p>
  </div>

  <%= form_with url: update_workouts_plan_path(@plan), method: :patch, local: true, 
                data: { controller: "workout-editor" }, 
                class: "bg-gradient-to-r from-blue-100 to-purple-100 p-6 rounded-xl shadow-md mb-8" do |form| %>
    
    <div class="bg-white/60 rounded-lg p-5 shadow-sm">
      <% if @activities.any? %>
        <div class="grid gap-4">
          <% current_week = nil %>
          <% @activities.each_with_index do |activity, index| %>
            <% week_number = (index / 7) + 1 %>
            <% day_of_week = activity.start_date_local.strftime("%A") %>
            
            <% if week_number != current_week %>
              <% current_week = week_number %>
              <div class="border-t-2 border-slate-300 pt-4 mt-4">
                <h3 class="font-semibold text-xl text-slate-700 mb-3">Week <%= week_number %></h3>
              </div>
            <% end %>
            
            <div class="grid grid-cols-12 gap-4 items-center bg-white rounded-lg p-4 shadow-sm">
              <div class="col-span-2">
                <span class="font-medium text-slate-600"><%= day_of_week %></span>
                <br>
                <span class="text-sm text-slate-500"><%= activity.start_date_local.strftime("%m/%d") %></span>
              </div>
              
              <div class="col-span-3">
                <%= fields_for "activities[#{activity.id}]" do |activity_form| %>
                  <%= activity_form.label :distance, "Distance (miles)", class: "block text-sm font-medium text-slate-700 mb-1" %>
                  <%= activity_form.number_field :distance, 
                                               value: activity.distance, 
                                               step: 0.1, 
                                               class: "w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3" %>
                <% end %>
              </div>
              
              <div class="col-span-7">
                <%= fields_for "activities[#{activity.id}]" do |activity_form| %>
                  <%= activity_form.label :description, "Workout Description", class: "block text-sm font-medium text-slate-700 mb-1" %>
                  <%= activity_form.text_field :description, 
                                             value: activity.description, 
                                             placeholder: "e.g., Easy run, Rest day, 5 x 800m intervals",
                                             data: { action: "blur->workout-editor#suggestDescription" },
                                             class: "w-full rounded-md border-slate-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <p class="text-slate-600 mb-4">No workouts found. You can:</p>
          <div class="space-y-3">
            <p class="text-slate-500">• Upload training plan photos that will be automatically processed</p>
            <p class="text-slate-500">• Create a blank workout schedule and customize each day</p>
            <%= link_to "Create Blank Schedule", create_blank_schedule_plan_path(@plan), 
                        method: :post,
                        class: "inline-block rounded-lg py-3 px-5 bg-indigo-600 text-white font-medium hover:bg-indigo-700 transition duration-300" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex gap-3">
      <%= form.submit "Save Workouts", class: "rounded-lg py-3 px-5 bg-indigo-600 text-white font-medium hover:bg-indigo-700 transition duration-300" %>
      <%= link_to "Back to Plan", @plan, class: "rounded-lg py-3 px-5 bg-slate-100 text-slate-700 font-medium hover:bg-slate-200 transition duration-300" %>
      <%= link_to "All Plans", plans_path, class: "rounded-lg py-3 px-5 bg-slate-100 text-slate-700 font-medium hover:bg-slate-200 transition duration-300" %>
    </div>
  <% end %>
</div>