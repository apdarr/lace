<div class="max-w-4xl mx-auto px-4">
  <% if notice.present? %>
    <p class="mb-6 inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200" id="notice"><%= notice %></p>
  <% end %>

  <div class="space-y-8">
    <header class="text-center">
      <h1 class="heading-page">Create New Plan</h1>
      <p class="text-sm font-medium text-slate-500 mt-2">Build a personalized training schedule</p>
    </header>

    <section class="card">
      <div class="card-header">
        <h2 class="card-title">Plan Details</h2>
      </div>
      <div class="card-section">
        <%= render "form", plan: @plan %>
      </div>
      <div class="card-section border-t border-slate-200">
        <%= link_to "Back to plans", plans_path, class: "text-blue-600 transition-colors font-bold underline text-lg" %>
      </div>
    </section>
  </div>
</div>
