<div class="app-container max-w-5xl mx-auto">
  <% if notice.present? %>
    <p class="mb-6 inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-medium text-green-700 ring-1 ring-inset ring-green-200" id="notice"><%= notice %></p>
  <% end %>

  <div class="stack-lg">
    <header class="text-center stack-sm">
      <h1 class="heading-page">Your Training Plans</h1>
      <p class="text-sm font-medium text-slate-500">Create and manage structured progress</p>
    </header>

    <section class="card">
      <div class="card-header">
        <h2 class="card-title">Plans</h2>
        <%= link_to new_plan_path, class: "btn-primary" do %>
          New Plan
        <% end %>
      </div>
      <div class="card-section">
        <div id="plans" class="space-y-3">
          <% if @plans.any? %>
            <% @plans.each do |plan| %>
              <div class="card hover:shadow-md transition group">
                <div class="card-section flex items-center justify-between gap-6">
                  <div class="space-y-1">
                    <h3 class="text-base font-semibold text-slate-800"><%= plan.length %> Week Plan</h3>
                    <p class="text-sm text-slate-500">Race Date: <span class="font-medium text-slate-800"><%= plan.race_date.strftime("%b %d, %Y") %></span></p>
                  </div>
                  <div class="flex gap-2">
                    <%= link_to "View", plan, class: "btn-outline" %>
                    <%= link_to "Edit", edit_plan_path(plan), class: "btn-soft" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="card-section text-center space-y-4">
              <p class="text-sm text-slate-600">You don't have any training plans yet.</p>
              <%= link_to new_plan_path, class: "btn-primary" do %>
                Create your first plan
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
